{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "dotnet",
			"task": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"label": "dotnet: build"
		},
		{
            "label": "Generate coverage stats",
            "command": "reportgenerator",
            "type": "shell",
            "args": [
                "-reports:${workspaceFolder}/YourUnitTestProjectFolder/lcov.info",
                "-targetdir:${workspaceFolder}/YourUnitTestProjectFolder/covstats"
            ],
            "problemMatcher": []
        }
	]
}